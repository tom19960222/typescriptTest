{
  "compilerOptions": {
    "module": "commonJS",
    "lib": ["es6", "es2015", "esnext.asynciterable"],
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "bin/**/*.ts", "index.ts", "test/**/*.ts", "*.ts"],
  "exclude": ["node_modules/**/*.ts", "**/*.spec.ts"]
}
